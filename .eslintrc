{
  "extends": [
    "pedant",
    "plugin:react/recommended"
  ],
  "plugins": [
    "require-path-exists",
    "react",
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  }
}
